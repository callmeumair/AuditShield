{
    "manifest_version": 3,
    "name": "AuditShield Compliance Monitor",
    "version": "1.0.0",
    "description": "Passive compliance logging for allowed AI tools.",
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}